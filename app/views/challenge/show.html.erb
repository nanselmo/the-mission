
<% challenge = @challenge %>
<div id="challenge">
      <div class="jumbotron">
        <h1><%= challenge.title %></h1>
        <p class="lead"><%= challenge.story %></p>
      </div>

      <div class="row marketing">
        <div class="col-lg-6">
            <%= image_tag(challenge.image_location) %>
        </div>

        <div class="col-lg-6">
          <h4>Mission</h4>
          <p><%= challenge.mission %></p>

          <h4>Materials</h4>

          <ul>
             <% challenge.materials.each do | material | %>
                <li><%= material.content %></li>
            <% end %>
          </ul>

          <h4>Constraints</h4>

          <ul>
             <% challenge.constraints.each do | constraint | %>
                <li><%= constraint.content %></li>
            <% end %>
          </ul>

            <p class="challenge-btn">
                <a class="btn btn-lg btn-info" href="#" role="button">Need Help?</a>
            </p>
            <p class="challenge-btn">

                <a class="btn btn-lg btn-success" href="<%= challenge_submit_path %>" role="button">Submit Now</a>
            </p>
        </div>
      </div>
</div>
