<div id="result">
    <h1>Congrats <%= current_user.email %>!</h1>
    <div>
        <p>This is the project you just submitted:</p>
        <img src="<%= current_user.submissions.last.file.url %>"/>
    </div>

      
    <div class="jumbotron">
        <div class="row">
            <h2>Real Civil Engineer</h2>
        </div>
        <div class="row">
            <div>
                <img class="engineer-profile" src="http://thumbs.dreamstime.com/z/engineer-entrepreneur-architect-business-woman-29079430.jpg"/>
            </div>
            <div>
                    <h3>Name</h3>
                    <p>This is a description for the real engineer</p>
            </div>
        </div>
    </div>

    <div>
        <h2>Community Designs</h2>
            <p>Examples from other students</p>
    </div>
    <div class="container-fluid">
        <% Submission.all.each do |submission| %>
            <div class="row">
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                    <img class="project-thumb"src="<%= submission.file.url %>"/>
                    <div class="caption">
                        <h3><%= submission.user.email %></h3>
                        <p><%= submission.description %></p>
                    </div>
                </div>
            </div>
        <% end %>
    </div>

    <div class="jumbotron">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h2>Build Shelter</h2>
                <img src="http://www.howtoinstructions.org/wp-content/uploads/2013/11/How-to-build-a-house-with-Popsicle-Sticks-step-by-step-DIY-tutorial-instructions-thumb-332x332.jpg" class="img-responsive" alt="Responsive image">
                <div class="center-block"><button type="button" class="btn btn-primary">Next Challenge</button></div>
            </div>
        </div>
    </div>
</div>